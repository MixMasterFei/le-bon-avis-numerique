// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ============================================
// AUTHENTICATION MODELS (NextAuth.js)
// ============================================

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String    @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  password      String?   // For credentials auth
  role          UserRole  @default(USER)
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  accounts      Account[]
  sessions      Session[]
  reviews       Review[]
  favorites     Favorite[]
  watchlist     Watchlist[]
  reports       ReviewReport[]
  familyMembers FamilyMember[]

  @@map("users")
}

model Account {
  id                String  @id @default(uuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

enum UserRole {
  USER
  ADMIN
  MODERATOR
}

// ============================================
// MEDIA MODELS
// ============================================

enum MediaType {
  MOVIE
  TV
  GAME
  BOOK
  APP
}

enum ReviewerRole {
  PARENT
  KID
  EDUCATOR
}

model MediaItem {
  id              String    @id @default(uuid())
  title           String
  originalTitle   String?   @map("original_title")
  type            MediaType
  releaseDate     DateTime? @map("release_date")
  posterUrl       String?   @map("poster_url")
  backdropUrl     String?   @map("backdrop_url")
  synopsisFr      String?   @map("synopsis_fr") @db.Text
  officialRating  String?   @map("official_rating")
  expertAgeRec    Int?      @map("expert_age_rec")
  communityAgeRec Float?    @map("community_age_rec")
  duration        Int? // minutes for movies/shows, null for others
  director        String?
  genres          String[]
  platforms       String[] // Netflix, Disney+, Canal+, etc.
  topics          String[] // Princesses, Dinosaurs, History, etc.

  // External API IDs for syncing
  tmdbId       Int?    @unique @map("tmdb_id")
  igdbId       Int?    @unique @map("igdb_id")
  googleBookId String? @unique @map("google_book_id")

  // Data quality tracking
  dataSource       DataSource @default(TMDB) @map("data_source")
  dataQualityScore Int        @default(0) @map("data_quality_score") // 0-100
  isEnriched       Boolean    @default(false) @map("is_enriched") // Has expert content
  lastVerifiedAt   DateTime?  @map("last_verified_at")
  enrichedBy       String?    @map("enriched_by") // User ID who enriched

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  contentMetrics       ContentMetrics?
  reviews              Review[]
  favorites            Favorite[]
  watchlist            Watchlist[]
  reactions            MediaReaction[]
  credits              MediaCredit[]
  similarToA           MediaSimilarity[] @relation("SimilarMediaA")
  similarToB           MediaSimilarity[] @relation("SimilarMediaB")
  streamingAvailability StreamingAvailability[]

  @@index([type])
  @@index([expertAgeRec])
  @@index([dataQualityScore])
  @@index([isEnriched])
  @@map("media_items")
}

enum DataSource {
  TMDB
  IGDB
  GOOGLE_BOOKS
  EXPERT      // Manually entered by expert
  COMMUNITY   // User-submitted
}

model ContentMetrics {
  id                    String   @id @default(uuid())
  mediaId               String   @unique @map("media_id")
  violence              Int      @default(0) // 0-5 scale
  sexNudity             Int      @default(0) @map("sex_nudity")
  language              Int      @default(0)
  consumerism           Int      @default(0)
  substanceUse          Int      @default(0) @map("substance_use")
  positiveMessages      Int      @default(0) @map("positive_messages")
  roleModels            Int      @default(0) @map("role_models")
  whatParentsNeedToKnow String[] @map("what_parents_need_to_know")
  createdAt             DateTime @default(now()) @map("created_at")
  updatedAt             DateTime @updatedAt @map("updated_at")

  media MediaItem @relation(fields: [mediaId], references: [id], onDelete: Cascade)

  @@map("content_metrics")
}

model Review {
  id            String       @id @default(uuid())
  userId        String?      @map("user_id")
  mediaId       String       @map("media_id")
  role          ReviewerRole
  rating        Int // 1-5 stars
  ageSuggestion Int?         @map("age_suggestion")
  comment       String?      @db.Text
  isVerified    Boolean      @default(false) @map("is_verified")
  createdAt     DateTime     @default(now()) @map("created_at")
  updatedAt     DateTime     @updatedAt @map("updated_at")

  user  User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  media MediaItem @relation(fields: [mediaId], references: [id], onDelete: Cascade)

  @@index([mediaId])
  @@index([userId])
  @@map("reviews")
}

// ============================================
// USER INTERACTIONS
// ============================================

model Favorite {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  mediaId   String   @map("media_id")
  createdAt DateTime @default(now()) @map("created_at")

  user  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  media MediaItem @relation(fields: [mediaId], references: [id], onDelete: Cascade)

  @@unique([userId, mediaId])
  @@index([mediaId])
  @@map("favorites")
}

model Watchlist {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  mediaId   String   @map("media_id")
  createdAt DateTime @default(now()) @map("created_at")

  user  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  media MediaItem @relation(fields: [mediaId], references: [id], onDelete: Cascade)

  @@unique([userId, mediaId])
  @@index([mediaId])
  @@map("watchlist")
}

// ============================================
// MODERATION
// ============================================

enum ReportReason {
  INAPPROPRIATE
  SPAM
  HARASSMENT
  MISINFORMATION
  OTHER
}

enum ReportStatus {
  PENDING
  REVIEWED
  RESOLVED
  DISMISSED
}

model ReviewReport {
  id        String       @id @default(uuid())
  reviewId  String       @map("review_id")
  userId    String       @map("user_id")
  reason    ReportReason
  details   String?      @db.Text
  status    ReportStatus @default(PENDING)
  createdAt DateTime     @default(now()) @map("created_at")
  updatedAt DateTime     @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([reviewId, userId])
  @@index([status])
  @@map("review_reports")
}

// ============================================
// FAMILY MEMBERS & REACTIONS
// ============================================

model FamilyMember {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  name        String
  birthYear   Int?     @map("birth_year")
  avatarEmoji String   @default("üëß") @map("avatar_emoji")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user      User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  reactions MediaReaction[]

  @@index([userId])
  @@map("family_members")
}

enum ReactionType {
  LOVED      // Ador√©
  LIKED      // Bien aim√©
  OK         // Bof
  SCARED     // A eu peur
  BORED      // S'est ennuy√©
  TOO_YOUNG  // Trop jeune pour comprendre
  TOO_OLD    // Trop vieux (pas int√©ress√©)
}

model MediaReaction {
  id             String       @id @default(uuid())
  familyMemberId String       @map("family_member_id")
  mediaId        String       @map("media_id")
  reaction       ReactionType
  note           String?      @db.Text
  createdAt      DateTime     @default(now()) @map("created_at")
  updatedAt      DateTime     @updatedAt @map("updated_at")

  familyMember FamilyMember @relation(fields: [familyMemberId], references: [id], onDelete: Cascade)
  media        MediaItem    @relation(fields: [mediaId], references: [id], onDelete: Cascade)

  @@unique([familyMemberId, mediaId])
  @@index([mediaId])
  @@map("media_reactions")
}

// ============================================
// TAXONOMY - Normalized Genres & Topics
// ============================================

model Genre {
  id        String  @id @default(uuid())
  slug      String  @unique // "animation", "comedy"
  name      String  // "Animation"
  nameFr    String  @map("name_fr") // "Animation"
  tmdbId    Int?    @unique @map("tmdb_id")
  igdbId    Int?    @unique @map("igdb_id")
  parentId  String? @map("parent_id") // For hierarchy

  parent   Genre?  @relation("GenreHierarchy", fields: [parentId], references: [id])
  children Genre[] @relation("GenreHierarchy")

  @@map("genres")
}

model Topic {
  id        String      @id @default(uuid())
  slug      String      @unique // "aviation", "friendship"
  name      String      // "Aviation"
  nameFr    String      @map("name_fr") // "Aviation"
  category  TopicCategory // theme, emotion, setting, activity
  synonyms  String[]    // ["avion", "pilote", "vol"]
  icon      String?     // Emoji or icon name

  @@index([category])
  @@map("topics")
}

enum TopicCategory {
  THEME       // Aviation, Space, Magic
  EMOTION     // Friendship, Love, Fear
  SETTING     // City, Nature, Fantasy World
  ACTIVITY    // Sport, Music, Cooking
  CHARACTER   // Princesses, Dinosaurs, Robots
}

// ============================================
// CAST & CREW
// ============================================

model Person {
  id          String  @id @default(uuid())
  name        String
  tmdbId      Int?    @unique @map("tmdb_id")
  igdbId      Int?    @unique @map("igdb_id")
  imageUrl    String? @map("image_url")
  knownFor    String? @map("known_for") // "Director", "Actor"

  credits MediaCredit[]

  @@index([name])
  @@map("persons")
}

model MediaCredit {
  id        String  @id @default(uuid())
  mediaId   String  @map("media_id")
  personId  String  @map("person_id")
  role      CreditRole
  character String? // For actors: character name
  order     Int?    // Billing order

  media  MediaItem @relation(fields: [mediaId], references: [id], onDelete: Cascade)
  person Person    @relation(fields: [personId], references: [id], onDelete: Cascade)

  @@unique([mediaId, personId, role])
  @@index([personId])
  @@map("media_credits")
}

enum CreditRole {
  DIRECTOR
  ACTOR
  WRITER
  COMPOSER
  PRODUCER
  DEVELOPER  // For games
  AUTHOR     // For books
}

// ============================================
// MEDIA SIMILARITY (for recommendations)
// ============================================

model MediaSimilarity {
  id              String   @id @default(uuid())
  mediaIdA        String   @map("media_id_a")
  mediaIdB        String   @map("media_id_b")
  similarityScore Float    @map("similarity_score") // 0.0 - 1.0
  reasons         String[] // ["same_director", "similar_themes", "same_studio"]
  source          SimilaritySource @default(ALGORITHM)
  createdAt       DateTime @default(now()) @map("created_at")

  mediaA MediaItem @relation("SimilarMediaA", fields: [mediaIdA], references: [id], onDelete: Cascade)
  mediaB MediaItem @relation("SimilarMediaB", fields: [mediaIdB], references: [id], onDelete: Cascade)

  @@unique([mediaIdA, mediaIdB])
  @@index([mediaIdA])
  @@index([mediaIdB])
  @@index([similarityScore])
  @@map("media_similarities")
}

enum SimilaritySource {
  ALGORITHM   // Auto-computed
  TMDB        // From TMDB similar movies
  EXPERT      // Manually curated
  COMMUNITY   // User-suggested
}

// ============================================
// STREAMING AVAILABILITY
// ============================================

model StreamingAvailability {
  id             String    @id @default(uuid())
  mediaId        String    @map("media_id")
  provider       String    // "Netflix", "Disney+"
  providerId     Int?      @map("provider_id") // TMDB/JustWatch provider ID
  country        String    @default("FR") // ISO country code
  type           StreamingType
  availableFrom  DateTime? @map("available_from")
  availableUntil DateTime? @map("available_until")
  link           String?   // Direct link to watch
  lastChecked    DateTime  @default(now()) @map("last_checked")

  media MediaItem @relation(fields: [mediaId], references: [id], onDelete: Cascade)

  @@unique([mediaId, provider, country, type])
  @@index([provider])
  @@index([country])
  @@index([lastChecked])
  @@map("streaming_availability")
}

enum StreamingType {
  SUBSCRIPTION  // Flatrate (Netflix, Disney+)
  RENT
  BUY
  FREE
  ADS           // Free with ads
}
